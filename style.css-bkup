a, a:visited, a:active {
	text-decoration: none;
	color: blue;
}

a:hover {
	text-decoration: underline;
	color: red;
}

body {
	margin: 0px;
	padding: 0px;
  background-color:  #5a738d; // Puke#bbc552; 
/*  background-image: url(images/top-background.png); */
  background-image: url(90-115-141-40-74-98-120-50-90-115-141-20-74-98-120-10-90-115-141-10-74-98-120-10.png);
  background-repeat: repeat-x;
  font-family: "Inconsolata", monospace;
	font-weight: bold;
	font-size: 14px;
	text-align: center;
}

h2 {
	font-size: 16px;
	font-weight: bold;
}

pre {
	font-family: "Inconsolata", monospace;
	font-weight: bold;
	margin: 0px;
}

#page-border {
  margin: 10px auto;
  padding: 8px;
  background-color: #4a6278;
  width: 850px;

  /*
  box-shadow: 0px 0px 9px rgba(140,140,150,1);
